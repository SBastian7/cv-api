<!-- views/dashboard.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - View All Users</title>
  <!-- Link the Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
  <!-- Two-column layout -->
  <div class="flex flex-col md:flex-row min-h-screen">
    <!-- Left side nav -->
    <div class="bg-white shadow-md md:w-1/4 md:flex md:flex-col">
      <nav class="px-4 py-6 flex justify-between items-center border-b">
        <h1 class="text-2xl font-bold">Admin Dashboard</h1>
        <a href="#" class="px-4 py-2 bg-red-600 text-white rounded-md">Logout</a> <!-- Add your logout link here -->
      </nav>
      <nav class="flex-grow md:flex-grow-0 md:pb-4 md:border-b">
        <ul class="px-4 py-6 flex flex-col items-center md:items-start md:border-b md:w-full">
          <li class="mb-4 w-full md:w-auto">
            <a href="#all-users" class="block text-blue-600 font-semibold">All Users</a>
          </li>
          <!-- Add more navigation links here if needed -->
        </ul>
      </nav>
    </div>

    <!-- Right column -->
    <div class="md:w-3/4 p-6">
      <!-- Users Table Section -->
      <div class="overflow-x-auto">
        <table class="w-full table-auto">
          <thead>
            <tr>
              <th class="px-4 py-2 border">ID</th>
              <th class="px-4 py-2 border">Name</th>
              <th class="px-4 py-2 border">Email</th>
              <th class="px-4 py-2 border">About</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td class="px-4 py-2 border"><a href="/admin/dashboard/users/<%= user.id %>"><%= user.id %></a></td>
              <td class="px-4 py-2 border"><%= user.name %></td>
              <td class="px-4 py-2 border"><%= user.email %></td>
              <td class="px-4 py-2 border"><%= user.about %></td>              
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Button to create a new user -->
      <div class="mt-4">
        <a href="#create-user" class="px-4 py-2 bg-green-600 text-white rounded-md">Create User</a>
      </div>
    </div>
  </div>

  <!-- JavaScript for the responsive left side nav -->
  <script>
    const menuBtn = document.getElementById('menu-btn');
    const sideNav = document.getElementById('side-nav');

    menuBtn.addEventListener('click', () => {
      sideNav.classList.toggle('hidden');
    });
  </script>
</body>

</html>
