<!-- views/userDetails.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Details</title>
  <!-- Link the Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
  <!-- Two-column layout -->
  <div class="flex flex-col md:flex-row min-h-screen">
    <!-- Left side nav -->
    <div class="bg-white shadow-md md:w-1/4 md:flex md:flex-col">
      <nav class="px-4 py-6 flex justify-between items-center border-b">
        <h1 class="text-2xl font-bold">Admin Dashboard</h1>
        <a href="#" class="px-4 py-2 bg-red-600 text-white rounded-md">Logout</a> <!-- Add your logout link here -->
      </nav>
      <nav class="flex-grow md:flex-grow-0 md:pb-4 md:border-b">
        <ul class="px-4 py-6 flex flex-col items-center md:items-start md:border-b md:w-full">
          <li class="mb-4 w-full md:w-auto">
            <a href="#all-users" class="block text-blue-600 font-semibold">All Users</a>
          </li>
          <!-- Add more navigation links here if needed -->
        </ul>
      </nav>
    </div>

    <!-- Right column -->
    <div class="md:w-3/4 p-6">
      

      <!-- Update User Form -->
      <div class="mt-4">
        <form action="/admin/dashboard/users/<%= user.id %>" method="POST">
          <div class="mb-4">
            <label for="isadmin" class="block font-semibold mb-2">Is admin</label>
            <input type="checkbox" name="isadmin" id="isadmin" class="w-full px-4 py-2 border rounded-md" value="<%= user.isAdmin %>"
              required>
          </div>
          <div class="mb-4">
            <label for="name" class="block font-semibold mb-2">Name</label>
            <input type="text" name="name" id="name" class="w-full px-4 py-2 border rounded-md" value="<%= user.name %>"
              required>
          </div>
          <div class="mb-4">
            <label for="email" class="block font-semibold mb-2">Email</label>
            <input type="email" name="email" id="email" class="w-full px-4 py-2 border rounded-md"
              value="<%= user.email %>" required>
          </div>
          <div class="mb-4">
            <label for="about" class="block font-semibold mb-2">About</label>
            <textarea name="about" id="about" class="w-full px-4 py-2 border rounded-md" rows="4"
              required><%= user.about %></textarea>
          </div>
          <div class="mt-4">
            <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-md">Update User</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- JavaScript for the responsive left side nav -->
  <script>
    const menuBtn = document.getElementById('menu-btn');
    const sideNav = document.getElementById('side-nav');

    menuBtn.addEventListener('click', () => {
      sideNav.classList.toggle('hidden');
    });
  </script>
</body>

</html>
